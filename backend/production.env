# Production Environment Configuration
# Copy this file to .env and update with your production values

# Server Configuration
PORT=5000
NODE_ENV=production

# MongoDB Configuration (Production)
MONGODB_URI=mongodb://your-production-mongodb-uri

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters
JWT_EXPIRES_IN=24h

# Encryption (Use strong encryption key in production)
ENCRYPTION_KEY=your-32-character-encryption-key

# Email Configuration (Production SMTP)
SMTP_HOST=your-production-smtp-host
SMTP_PORT=587
SMTP_USER=your-production-email@domain.com
SMTP_PASS=your-production-app-password

# API Rate Limiting (Production settings)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (Production limits)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=xlsx,xls

# External APIs (Production endpoints)
PAN_KYC_API_URL=https://your-production-pan-api.com
AADHAAR_PAN_API_URL=https://your-production-aadhaar-api.com
API_KEY=your-production-api-key

# Sandbox API Configuration (Production)
SANDBOX_API_KEY=your-production-sandbox-key
SANDBOX_API_SECRET=your-production-sandbox-secret

# Fallback API Configuration (Production)
FALLBACK_API_URL=https://your-production-fallback-api.com

# 2FA Configuration (Production)
TOTP_SECRET=your-production-totp-secret

# Logging (Production)
LOG_LEVEL=warn
LOG_FILE_PATH=./logs/app.log

# Security (Production)
TRUST_PROXY=1
ENABLE_COMPRESSION=true

# CORS Configuration (Production)
# Frontend URL - Your production frontend domain
# IMPORTANT: Set this in AWS Amplify Console → App settings → Environment variables
# For Render: Set in Render Dashboard → Environment → Environment Variables
FRONTEND_URL=https://www.avihridsys.in

# Allowed Origins - Comma-separated list of allowed origins
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
# Note: If not specified, defaults to Vercel/Netlify regex patterns which will match *.vercel.app domains
# The regex pattern will automatically match https://adhar-pan-kyc.vercel.app
# Avihridsys domains (.in and .info) are automatically allowed via regex pattern
ALLOWED_ORIGINS=

